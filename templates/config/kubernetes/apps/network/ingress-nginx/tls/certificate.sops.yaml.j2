---
# yaml-language-server: $schema=https://raw.githubusercontent.com/datreeio/CRDs-catalog/main/cert-manager.io/certificate_v1.json
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "#{ cloudflare_domain.replace('.', '-') }#-#{ cloudflare_cluster_issuer }#"
spec:
  secretName: "#{ cloudflare_domain.replace('.', '-') }#-#{ cloudflare_cluster_issuer }#-tls"
  issuerRef:
    name: letsencrypt-#{ cloudflare_cluster_issuer }#
    kind: ClusterIssuer
  commonName: "#{ cloudflare_domain }#"
  dnsNames: ["#{ cloudflare_domain }#", "*.#{ cloudflare_domain }#"]
